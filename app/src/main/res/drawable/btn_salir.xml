<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color de fondo de la vista -->
    <solid
        android:color="#DB3434" >
    </solid>

    <!-- Color y ancho del borde del elemento -->
    <stroke
        android:width="1dp"
        android:color="#DB3434" >
    </stroke>
    <gradient
        android:startColor="#DB3434"
        android:endColor="#880000"
        android:angle="-90"
        />

    <!-- Si queremos añadir algún padding -->
    <padding
        android:left="4dp"
        android:top="2dp"
        android:right="4dp"
        android:bottom="2dp"    >
    </padding>

    <!-- Aquí indicamos el radio a aplicar a las esquinas -->
    <corners
        android:radius="10dp"   >
    </corners>
</shape>